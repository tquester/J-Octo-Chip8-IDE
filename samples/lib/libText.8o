#: textbase
#: enterTheMine  tinytext8 "Enter the mine#"
#: mariowashere2 tinytext8 "Mario was here!#"#
#
#: main
#            Tinytext 10 10 enterTheMine
#: wait
#            jump wait



:macro Tinytext X Y textadr {
              v1 := X
              v2 := Y
              v3 := textadr - textbase
              drawTinyString
            }

: drawTinyLetter2
            if v0 == 1 begin                                          # newline character
              v1 := 0
              v2 += 6
              return
            end
            v0 -= 2
            i := tinyA
            if v0 > 30 begin                                          # If letter is to big calculation will not fit in 8bit
              v4 := 150
              i += v4                                                 # 50 * 5.
              v0 -= 30
            end
            v4 := v0
            v0 += v0
            v0 += v0
            v0 += v4                                                  # * 5
            i += v0
            sprite v1 v2 5
            v1 += 5
            return


: drawTinyString

            loop
              i := textbase
              i += v3
              load v0
              if v0 == 0 then return
              drawTinyLetter2
              v3 += 1
            again

